{
  "name": "adonis-starter-kit",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "develop": "npm run ssr && npm run dev",
    "dev": "node ace serve --watch",
    "ssr": "node ace ssr:watch",
    "build": "node ace build --production",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.8.1",
    "@babel/core": "^7.18.10",
    "@babel/preset-react": "^7.0.0",
    "@japa/preset-adonis": "^1.1.0",
    "@japa/runner": "^2.0.9",
    "@symfony/webpack-encore": "^3.0.0",
    "@types/react": "17",
    "@types/react-dom": "17",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "pino-pretty": "^9.0.0",
    "prettier": "^2.7.1",
    "ts-loader": "^9.0.0",
    "typescript": "~4.6",
    "webpack-node-externals": "^3.0.0",
    "youch": "^3.2.0",
    "youch-terminal": "^2.1.4"
  },
  "dependencies": {
    "@adonisjs/core": "^5.8.0",
    "@adonisjs/repl": "^3.1.0",
    "@adonisjs/session": "^6.2.0",
    "@adonisjs/shield": "^7.0.0",
    "@adonisjs/view": "^6.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@eidellev/inertia-adonisjs": "^7.0.0",
    "@inertiajs/inertia": "^0.11.0",
    "@inertiajs/inertia-react": "^0.8.0",
    "@inertiajs/progress": "^0.2.7",
    "proxy-addr": "^2.0.7",
    "react": "17",
    "react-dom": "17",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21"
  },
  "peerDependencies": {
    "openapi-types": "7"
  }
}
